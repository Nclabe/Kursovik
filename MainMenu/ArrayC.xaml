<Page x:Class="MainMenu.ArrayC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MainMenu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ArrayC">

    <Grid Background="#FFEAEAEA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Width="210" Height="100" Grid.Row="0" Grid.Column="0"  Grid.RowSpan="2" VerticalAlignment="Center" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="5"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Button x:Name="FillArray" Click="FillArray_Click" Grid.Row="0" FontSize="19">Заполнить</Button>
            <Button x:Name="SortArray" Click="SortArray_Click" Grid.Row="2" FontSize="19">Отсортировать массив</Button>

        </Grid>

        <Grid Grid.RowSpan="2" Grid.Column="1" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="20"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="17" Margin="20 0 0 0">Массив C</TextBlock>
            <TextBox x:Name="ArrayCGrid" Margin="20,0,0,20" Grid.RowSpan="2" Grid.Column="0" Grid.Row="1">

            </TextBox>

            <TextBlock Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="17" Margin="0 0 20 0">Отсортированный массив C</TextBlock>
            <TextBox x:Name="ArrayCGridSort" Margin="0,0,20,20" Grid.RowSpan="2" Grid.Column="2" Grid.Row="1">

            </TextBox>
        </Grid>
    </Grid>
</Page>
